<h1>Listing articles</h1>
<table>
    <tr>
        <th>Title</th>
        <th>Text</th>
        <th colspan="3"></th>
    </tr>
    <% @articles.each do |article| %>
        <tr>
            <td><%= article.title %></td>
            <td><%= article.text %></td>
            <td><%= link_to '상세내용', article_path(article) %></td>
            <td><%= link_to '수정', edit_article_path(article) %></td>
            <td><%= link_to '삭제하기', article_path(article),
            method: :delete,
            data: { confirm: '정말 삭제하실건가요?' } %></td>
        </tr>
    <% end %>
</table>

<%= link_to '새로운 의견제출', new_article_path %>
